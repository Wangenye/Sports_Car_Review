                            <h2 class="post-title">
                                <%= article.title %>
                            </h2>
                            <h3 class="post-subtitle">
                                <%= article.description %>
                            </h3>
                        </a>
                        <p class="post-meta">Posted by
                            <a href="#">
                                <%= article.author %>
                            </a>
                            <%= article.createdAt %>
                        </p>
                    </div>
                    <% }) %>
